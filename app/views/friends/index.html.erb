<h1>Friends</h1>

<div id="friends">
<table class="table ">
  <% @friends.each do |friend| %>
    <%= render friend, class:"table" %>
    <p>
      <%= link_to "Show this friend", friend, class:"btn btn-dark" %>
    </p>
  <% end %>
  </table>
</div>

<%= link_to "New Friend", new_friend_path, class:"btn btn-secondary" %>
